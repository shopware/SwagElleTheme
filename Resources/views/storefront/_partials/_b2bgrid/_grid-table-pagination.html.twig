{% sw_extends '@Storefront/storefront/_partials/_b2bgrid/_grid-table-pagination.html.twig' %}

{% block b2b_grid_table_pagination_button_previous %}
    <button
        class="btn btn-light btn--previous"
        value="{{ gridState.currentPage - 1 }}"
        {% if gridState.currentPage is same as(1) %}disabled{% endif %}
    >
        {% sw_icon 'chevron-left' style { 'size': 'xs', 'pack': 'feather'} %}
    </button>
{% endblock %}

{% block b2b_grid_table_pagination_button_next %}
    <button
        class="btn btn-light btn--next"
        value="{{ gridState.currentPage + 1 }}"
        {% if gridState.currentPage == gridState.maxPage %}disabled{% endif %}
    >
        {% sw_icon 'chevron-right' style { 'size': 'xs', 'pack': 'feather'} %}
    </button>
{% endblock %}
