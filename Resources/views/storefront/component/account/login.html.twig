{% sw_extends '@Storefront/storefront/component/account/login.html.twig' %}

{% block component_account_login_form_description %}
    {# removed login form description #}
{% endblock %}

{% block component_account_login_form_mail %}
    <div class="form-group col-md-12">
        {% block component_account_login_form_mail_label %}
            <label class="form-label"
                   for="loginMail">
                {{ "account.loginMailLabel"|trans|sw_sanitize }}{{ "general.required"|trans|sw_sanitize }}
            </label>
        {% endblock %}

        {% block component_account_login_form_mail_input %}
            {{ parent() }}
        {% endblock %}
    </div>
{% endblock %}

{% block component_account_login_form_password %}
    <div class="form-group col-md-12">
        {% block component_account_login_form_password_label %}
            <label class="form-label"
                   for="loginPassword">
                {{ "account.loginPasswordLabel"|trans|sw_sanitize }}{{ "general.required"|trans|sw_sanitize }}
            </label>
        {% endblock %}

        {% block component_account_login_form_password_input %}
            {{ parent() }}
        {% endblock %}
    </div>
{% endblock %}
