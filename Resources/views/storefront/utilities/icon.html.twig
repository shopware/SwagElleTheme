{% sw_extends '@Storefront/storefront/utilities/icon.html.twig' %}

{% block utilities_icon %}
    {% set styles = [ size, color, rotation, flip, class ] %}
    {% if pack == 'feather' %}
        {% spaceless %}
            <span class="icon-feather icon-feather-{{ name }}{% for entry in styles %}{% if entry != "" %} icon-{{ entry }}{% endif %}{% endfor %}">
                {{ source('@SwagElleTheme/../app/storefront/src/assets/icon/feather/'~ name ~'.svg', ignore_missing = true) }}
            </span>
        {% endspaceless %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}
